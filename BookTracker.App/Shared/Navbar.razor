@using BookTracker.App.Enums
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">
            <img src="/Assets/defaultProfilePicture.png" alt="Logo" width="30" height="24" class="d-inline-block align-text-top">
            BookTracker
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/">Home</a>
                </li>
                <AuthorizeView>
                    <Authorized>
                        <li class="nav-item">
                            <a class="nav-link" href="/booklist">Book list</a>
                        </li>
                        
                        @if (context.User.IsInRole(Roles.Admin.ToString()) || context.User.IsInRole(Roles.Owner.ToString()))
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/AdminDashboard">Admin Dashboard</a>
                            </li>
                        }
                    </Authorized>
                </AuthorizeView>

            </ul>

            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                <AuthorizeView>
                    <Authorized>
                        <li class="nav-item active">
                            <a class="nav-link" href="Identity/Account/Manage">Settings</a>
                        </li>
                        <li class="nav-item active">
                            <form method="post" action="Identity/Account/Logout">
                                <button type="submit" class="nav-link btn btn-link">Log out</button>
                            </form>
                        </li>
                    </Authorized>

                    <NotAuthorized>
                        <li class="nav-item active">
                            <a class="nav-link" href="Identity/Account/Register">Register</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="Identity/Account/Login">Login</a>
                        </li>
                    </NotAuthorized>
                </AuthorizeView>
                <li class="nav-item active">
                    <a class="nav-link" href="https://docs.microsoft.com/aspnet/" target="_blank">About</a>
                </li>
            </ul>
        </div>
    </div>
</nav>