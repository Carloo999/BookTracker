@using BookTracker.App.Enums
@using System.ComponentModel.DataAnnotations

<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#editUserModal-@Index">
    Edit User
</button>

<!-- Bootstrap modal -->
<div class="modal fade" id="editUserModal-@Index">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit User</h5>
            </div>
            <div class="modal-body">
                <EditForm Model="UserManagementModel" OnValidSubmit="SaveUserChanges">
                    <InputText class="form-control" id="id" disabled="true" @bind-Value="UserManagementModel.Id" placeholder="Id"/><br/>
                    <InputText class="form-control" id="username" @bind-Value="UserManagementModel.UserName" placeholder="Username"/><br/>
                    <InputText class="form-control" id="email" disabled="true" @bind-Value="UserManagementModel.Email" placeholder="Email"/><br/>
                    
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                    <button type="submit" class="btn btn-primary" data-dismiss="modal" @onclick="OnUserDelete">Delete</button>
                </EditForm>
            </div>
        </div>
    </div>
</div>


@code {
    [Parameter]
    [Required]
    public UserManagement.UserManagementModel UserManagementModel { get; set; }
    
    [Parameter]
    [Required]
    public int Index { get; set; }

    private void SaveUserChanges()
    {
        throw new NotImplementedException();
    }

    private void OnUserDelete()
    {
        throw new NotImplementedException();
    }

}